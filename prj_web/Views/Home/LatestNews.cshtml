@{
    ViewBag.Title = "4Gamers 最新遊戲新聞";

    var isPartial = ViewBag.IsPartial ?? false;
    if (!isPartial)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = null;
    } 
}

<h2>4Gamers 最新遊戲新聞</h2>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-md-4" style="padding: 10px">
            @if (!string.IsNullOrEmpty(item.ImageUrl))
            {
                <img src="@item.ImageUrl" class="img-responsive" alt="preview" style="width: 100%; display: block; margin-bottom: 10px;" />
            }
            <div class="img-thumbnail">
                <div class="caption">
                    <h4>@item.Title</h4>
                    <p>@item.Description</p>
                    <p><strong>發佈時間:</strong> @item.PubDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <a href="@item.Link" class="btn btn-primary" target="_blank">閱讀原文</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />